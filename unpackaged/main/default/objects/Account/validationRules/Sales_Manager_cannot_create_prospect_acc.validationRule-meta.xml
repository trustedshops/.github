<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Sales_Manager_cannot_create_prospect_acc</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISNEW(),
RecordType.Name = &quot;Prospect&quot;,
$Profile.Name = &quot;Sales Manager&quot;,
$User.ignore_validation_rules__c = false)</errorConditionFormula>
    <errorMessage>You cannot create Prospect accounts. Please contact your administrator.</errorMessage>
</ValidationRule>
