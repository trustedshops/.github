<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Total_Turnover_Minimum_Length</fullName>
    <active>true</active>
    <errorConditionFormula>ISCHANGED( Total_Turnover__c )  &amp;&amp;   NOT(  ISNULL(Total_Turnover__c) )  &amp;&amp;   LEN(TEXT(ABS(Total_Turnover__c))) &lt; 5</errorConditionFormula>
    <errorDisplayField>Total_Turnover__c</errorDisplayField>
    <errorMessage>&quot;Total Turnover must be at least 5 digits long.&quot;</errorMessage>
</ValidationRule>
