    <fullName>Write_only_Once</fullName>
    <active>false</active>
    <description>Testing</description>
    <errorConditionFormula>AND(
 ISCHANGED( AffiliateId__c ),
 NOT( ISBLANK(PRIORVALUE(AffiliateId__c)))
)</errorConditionFormula>
