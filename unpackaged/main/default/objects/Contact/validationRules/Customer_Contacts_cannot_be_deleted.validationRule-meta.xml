<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Customer_Contacts_cannot_be_deleted</fullName>
    <active>false</active>
    <errorConditionFormula>AND( 
NOT($User.ignore_validation_rules__c), 
ISNULL(Id ) , 
$Profile.Name != &quot;System Administrator&quot;
)</errorConditionFormula>
    <errorMessage>Contacts of Record Type Customer Contact cannot be deleted.</errorMessage>
</ValidationRule>
