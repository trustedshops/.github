<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Email_of_contact_lookups_must_be_filled2</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
AND(
ISCHANGED(responsible_for_purchasing__c),
ISBLANK(responsible_for_purchasing__r.Email)), 
AND(
ISCHANGED(responsible_protections__c),
ISBLANK(responsible_protections__r.Email)))</errorConditionFormula>
    <errorMessage>Please fill in an email address in the connected contact.</errorMessage>
</ValidationRule>
