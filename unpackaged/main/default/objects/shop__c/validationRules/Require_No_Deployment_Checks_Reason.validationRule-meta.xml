<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_No_Deployment_Checks_Reason</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
No_Deployment_Checks__c = true, 
ISBLANK(No_Deployment_Checks_Reasons__c))</errorConditionFormula>
    <errorDisplayField>No_Deployment_Checks_Reasons__c</errorDisplayField>
    <errorMessage>Please give a reason why no deployment check case should be created.</errorMessage>
</ValidationRule>
